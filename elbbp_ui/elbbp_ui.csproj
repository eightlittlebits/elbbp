    <Authors>David Parrott</Authors>
    <Company>eightlittlebits</Company>
    <Product>elbbp</Product>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
